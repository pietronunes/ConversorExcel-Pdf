<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabela Html</title>
    <style>
        * {
            margin: 0 auto;
            padding: 0;
        }

        body {
            font-family: sans-serif;
        }

        table {
            margin-top: 50px;
            width: 50%;
            border: 1px solid #e2e2e2;
        }

        table th {
            color: red;
            text-align: left;
            border-bottom: 1px solid #e2e2e2;
            border-collapse: collapse;
        }

        table td {
            text-align: left;
            border-bottom: 1px solid #e2e2e2;
            border-collapse: collapse;
        }

        table tr {
            border-bottom: 1px solid #e2e2e2;
        }

    </style>
</head>
<body>
    
    <table>
        <thead>
            <% header.forEach((content) => { %>
                <th><%= content %> </th>
            <% }) %>
        </thead>

        <tbody>
            <% rows.forEach((row) => { %>
                <tr>
                    <% row.forEach((element) => { %>
                        <td><%= element %></td>
                    <% }) %> 
                </tr>
            <% }) %>
        </tbody>
    </table>




    
</body>
</html>